{
    "name": "ffsoft/rbac",
    "type": "library",
    "description": "FFsoft Role-Based Access Control based on Yii RBAC",
    "keywords": [
        "yii",
        "rbac"
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4",
        "doctrine/orm": "^2.7",
        "yiisoft/access": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3",
        "phan/phan": "^3.0"
    },
    "suggest": {
        "yiisoft/rbac-php": "To store rules in PHP files",
        "yiisoft/rbac-db": "To store rules in database"
    },
    "autoload": {
        "psr-4": {
            "ffsoft\\Rbac\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ffsoft\\Rbac\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
